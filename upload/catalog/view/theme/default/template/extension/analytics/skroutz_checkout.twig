<script>
    skroutz_analytics('ecommerce', 'addOrder', {
        order_id: '{{ order_id }}',
        revenue: '{{ revenue }}',
        shipping: '{{ shipping }}',
        tax: '{{ tax }}',
        paid_by: '{{ paid_by }}',
        paid_by_descr: '{{ paid_by_descr }}'
    });

    {% for product in products %}
    skroutz_analytics('ecommerce', 'addItem', {
        order_id: '{{ order_id }}',
        product_id: '{{ product.product_id }}',
        name: '{{ product.name }}',
        price: '{{ product.price }}',
        quantity: '{{ product.quantity }}'
    });
    {% endfor %}
</script>