{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-analytics" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-analytics" class="form-horizontal">
                    <ul class="nav nav-tabs" id="tabs">
                        <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
                        <li><a href="#tab-widget" data-toggle="tab">{{ tab_widget }}</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-general">
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-code">{{ entry_code }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="analytics_skroutz_code" value="{{ analytics_skroutz_code }}" placeholder="{{ entry_code }}" id="input-code" class="form-control"/>
                                    {% if error_code %}
                                        <div class="text-danger">{{ error_code }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                                <div class="col-sm-10">
                                    <select name="analytics_skroutz_status" id="input-status" class="form-control">
                                        <option value="1" {% if analytics_skroutz_status %} selected {% endif %}>{{ text_enabled }}</option>
                                        <option value="0" {% if not analytics_skroutz_status %} selected {% endif %}>{{ text_disabled }}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-widget">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-widget">{{ entry_widget }}</label>
                                <div class="col-sm-10">
                                    <select name="analytics_skroutz_widget" id="input-widget" class="form-control">
                                        <option value="" {% if not analytics_skroutz_widget %} selected {% endif %}>{{ text_disabled }}</option>
                                        <option value="inline" {% if analytics_skroutz_widget == 'inline' %} selected {% endif %}>{{ text_inline }}</option>
                                        <option value="extended" {% if analytics_skroutz_widget == 'extended' %} selected {% endif %}>{{ text_extended }}</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-replace-html">
                                    <span data-toggle="tooltip" title="{{ help_replace_html }}">{{ entry_replace_html }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" name="analytics_skroutz_replace_html" value="{{ analytics_skroutz_replace_html }}" placeholder="{{ entry_replace_html }}" id="input-replace-html" class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-replace-position">
                                    <span data-toggle="tooltip" title="{{ help_replace_position }}">{{ entry_replace_position }}</span>
                                </label>
                                <div class="col-sm-10">
                                    <select name="analytics_skroutz_replace_position" id="input-replace-position" class="form-control">
                                        <option value="after" {% if analytics_skroutz_replace_position == 'after' %} selected {% endif %}>{{ text_after }}</option>
                                        <option value="before" {% if analytics_skroutz_replace_position == 'before' %} selected {% endif %}>{{ text_before }}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }} 