<script>
    skroutz('ecommerce', 'addOrder', {
        order_id:      '{{ skroutz.order_id }}',
        revenue:       '{{ skroutz.revenue }}',
        shipping:      '{{ skroutz.shipping }}',
        tax:           '{{ skroutz.tax }}',
        paid_by:       '{{ skroutz.paid_by }}',
        paid_by_descr: '{{ skroutz.paid_by_descr }}'
    });

    {% for product in skroutz.products %}
    skroutz('ecommerce', 'addItem', {
        order_id:   '{{ skroutz.order_id }}',
        product_id: '{{ product.product_id }}',
        name:       '{{ product.name }}',
        price:      '{{ product.price }}',
        quantity:   '{{ product.quantity }}'
    });
    {% endfor %}
</script>